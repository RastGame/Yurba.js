{
  "name": "@yurbajs/yurba.js",
  "version": "0.0.0",
  "author": "RastGame",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:local": "pnpm run clean && pnpm run build",
    "test": "turbo run test",
    "test:local": "pnpm run build:local && pnpm run test",
    "lint": "turbo run lint",
    "lint:fix": "lerna run lint -- --fix",
    "dev": "lerna run build --watch",
    "clean": "turbo run clean",
    "all": "pnpm run lint && pnpm test && pnpm build",
    "install:all": "pnpm install",
    "docs": "typedoc",
    "docs:serve": "pnpm run docs && npx http-server docs -p 3000 -o",
    "docs:clean": "rimraf docs",
    "publish": "turbo run lint test clean build && lerna publish",
    "reset": "pnpm run clean && rm -rf node_modules packages/*/node_modules && pnpm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "axios": "^1.7.9",
    "dotenv": "^17.0.1",
    "eslint": "^9.25.1",
    "events": "^3.3.0",
    "globals": "^15.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^7.4.2",
    "lint-staged": "^15.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "turbo": "^2.5.4",
    "typedoc": "^0.28.3",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.0.0",
    "ws": "^8.18.0",
    "http-server": "^14.1.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}