{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@yurbajs/types": ["../types/dist"],
      "@yurbajs/rest": ["../rest/dist"],
      "@yurbajs/ws": ["../ws/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../rest" },
    { "path": "../ws" }
  ]
}