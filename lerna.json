{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "run": {
      "npmClient": "pnpm",
      "stream": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
} 